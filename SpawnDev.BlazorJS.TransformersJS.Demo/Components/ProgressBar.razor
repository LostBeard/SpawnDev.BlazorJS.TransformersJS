@code {
    [Parameter]
    public double Progress { get; set; }

    [Parameter]
    public double Max { get; set; } = 100;

    [Parameter]
    public string? Label { get; set; }

    private string ProgressBarWidth => $"{(Progress / Max) * 100}%";
}

<div class="progress-bar-container">
    <div class="progress-bar" style="width: @ProgressBarWidth"></div>
    <div class="progress-bar-label">@Progress.ToString("0.##")% @Label</div>
</div>

<style>
    .progress-bar-container {
        width: 100%;
        background-color: #e0e0e0;
        border-radius: 5px;
        overflow: hidden;
        padding: 5px;
        position: relative;
    }

    .progress-bar {
        height: 20px;
        background-color: #007bff;
        text-align: center;
        line-height: 24px;
    }

    .progress-bar-label {
        top: 0;
        padding: 5px;
        margin-bottom: 5px;
        font-weight: bold;
        position: absolute;
        text-align: center;
        color: black;
    }
</style>